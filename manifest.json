
{
  "manifest_version": 3,
  "name": "Simplifi",
  "version": "1.0",
  "permissions": ["contextMenus","scripting","activeTab","storage"],
  "host_permissions": ["https://generativelanguage.googleapis.com/*"],
  "icons": {
    "32": "assets/simplifi32.png",
    "16": "assets/simplifi16.png"

  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts":[
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["style.css"]
    }
  ],
  "web_accessible_resources": [
  {
    "resources": ["assets/simplifi16.png"],
    "matches": ["<all_urls>"]
  }
]

}



